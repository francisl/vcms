// see stle for navigation_container layout
div#vcms_navigation_container:
    dl:
        padding: 0;
        margin: 0;
        background-color: #dadada;
    dt:
        padding: 0 0.8em;
        margin: 0;
        
    dt, dd, li:
        &:hover:
            background-color: #7e7e7e;
            
    a:
        font-decoration: none;
        color: #2e2e2e;
        display: block;
        &:hover:
            color: white;