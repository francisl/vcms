// MENU
MAIN_MENU_WIDTH = 650px;

MAIN_MENU_HEIGHT = 52px;
MAIN_MENU_HEIGHT_LARGE = 96px;

SUBMENU_BORDER = 1px solid #7b7b7a;
MAIN_MENU_FONT_SIZE = 1em;
SUB_MENU_FONT_SIZE = 0.9em;

div#mainnav:
    .normal &:  
        height: $MAIN_MENU_HEIGHT;
        margin: -$MAIN_MENU_HEIGHT 0 $MAIN_MENU_HEIGHT auto;

    .large &: 
        height: $MAIN_MENU_HEIGHT_LARGE-1;
        margin: -$MAIN_MENU_HEIGHT_LARGE-1 0 $MAIN_MENU_HEIGHT_LARGE auto;

ul#mainmenu,ul.dropdown:
    .normal &:
        height: $MAIN_MENU_HEIGHT;
            
    .large &:
        height: $MAIN_MENU_HEIGHT_LARGE-1;
        
div#mainnav:
    position: absolute; 
    padding: 0;
    right: 0;
    z-index: 20;
    
ul#mainmenu, ul.dropdown:
    position: relative;
    z-index: 40;
    float: left;
    margin: 0;
 
    ul, li:
        //margin: 0;
        padding: 0;
        list-style: none;

    ul:
        width: 100%;
        top: 100%; 
        left: 0px;// align menu to main
        text-align: left;
        //right: 0px;// align menu to main
        //text-align: right;
        padding: 0.4em 0;
        border-left: $SUBMENU_BORDER;
        border-right: $SUBMENU_BORDER;
        border-bottom: $SUBMENU_BORDER;
        visibility: hidden;
        position: absolute;
        z-index: 40;
        width: 140px;
        background-color: #000;
        color: #fff;
        font-size: $MAIN_MENU_FONT_SIZE;
        text-transform: none;
        filter: alpha(opacity=70);
        -moz-opacity: .7;
        KhtmlOpacity: .7;
        opacity: .7;
        
        li:
            height: 100%;
            font-size: $SUB_MENU_FONT_SIZE;
            float: none;
            color: #fff;
            filter: none;
            padding: 0;
                
        a:
            color: #fff;
            padding: 0.6em 0.8em;
            .category:
                color: #ffd83c; // orange
            &:link, &:active, &a:visited:
                color: #fff;
            &:hover:
                background-color: #4a4a4a;
                color: #fff;
                text-decoration: none;

    // main menu item
    & > li:
        //height: $MAIN_MENU_HEIGHT;
        padding: 0;
        margin: 0;
        cursor: pointer;
        background-position: 0px "0px";
        background-repeat: no-repeat;
        display: block;
        
        & > a:
            color: #c2c2c2;
            margin: auto 0 0 0;
            padding-bottom: 12px;
            padding-left: 12px;
            padding-right: 12px;
            
        &.menu_selected > a:
            color: #b9ff3c; //light green
       
       
    .normal & > li:
        height: $MAIN_MENU_HEIGHT;
        background-image: url(../images/menu/main_menu_separator.jpg);
        a:
            padding-top: $MAIN_MENU_HEIGHT-24px;
    
    .normal & > li:hover:
        background-image: url(../images/menu/main_bg_hover.jpg);
            
    .large & > li:
        height: $MAIN_MENU_HEIGHT_LARGE;
        background-image: url(../images/menu_large/main_menu_separator.jpg);
        a:
            padding-top: $MAIN_MENU_HEIGHT_LARGE-24px;
            
        &:hover a:
            color: #99ca3c;
        &:hover:
            background-image: url(../images/menu_large/main_bg_hover.jpg);
        
    
    
    li:
        float: left;
        zoom: 1;
        line-height: normal;

        &:hover, .hover:
            position: relative;
            z-index: 40;
            cursor: default;
        &:hover > ul:
            visibility: visible;
            

    a:
        position: relative;
        display: block;
        
        &:link, &:visited:
            text-decoration: none; 
            display : block;
        &:hover:
            text-decoration: none;


